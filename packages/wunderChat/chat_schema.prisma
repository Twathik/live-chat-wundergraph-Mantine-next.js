datasource db {
  provider = "postgresql"
  url      = "postgresql://admin:admin@localhost:5432/livechat?schema=public"
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  lastName  String
  firstName String
  name      String
  userId    String  @unique
  avatarId  String?

  Chat Chat[]
}

model Chat {
  id        Int      @id @default(autoincrement())
  message   String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}
